{
  "name": "castoline_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/electron.js",
  "build": {
    "appId": "com.castoline_frontend.app",
    "productName": "Castoline",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "electron/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron",
    "make-exe": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test-run": "vitest run",
    "test-coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.2",
    "@tailwindcss/vite": "^4.1.14",
    "axios": "^1.12.2",
    "exceljs": "^4.4.0",
    "firebase": "^12.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.3",
    "react-select": "^5.10.2",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "playwright": "^1.58.1",
    "tailwindcss": "^4.1.14",
    "vite": "^7.1.7",
    "vitest": "^4.0.18"
  }
}
